<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_container"
    android:layout_marginTop="60dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:hint="@string/hi_client"
        android:textSize="20dp"
        android:textColorHint="@color/black"
        android:id="@+id/hiClient"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/handyMAnTV"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hiClient"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/handyman_icon"
        android:gravity="center_vertical"
        android:hint="Find a spetz"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/handyMAnTV"
        android:layout_marginTop="15dp"
        android:text="Since 1972"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:src="@drawable/handymanlogo01" />


    <Button
        android:id="@+id/search_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:text="@string/searchView" />

    <Button
        android:id="@+id/inquiries"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/search_button"
        android:text="@string/inquiriesButton" />

    <Button
        android:id="@+id/spetsRequests"
        android:layout_below="@id/inquiries"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Spetz Requests"
        android:visibility="invisible"/>

