<?xml version="1.0" encoding="utf-8"?>
<!-- Linear layout as parent layout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Text view to show the text Select course-->
    <TextView
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/nameTv"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@id/nameTv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/occupationTv"
        android:background="@android:drawable/editbox_background"
        />

    <TextView
        android:layout_below="@id/occupationTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/districtTv"
        android:background="@android:drawable/editbox_background"
        />

    <TextView
        android:layout_below="@id/districtTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/numberTv"
        android:background="@android:drawable/editbox_background"
        />

    <ImageView
        android:layout_below="@id/numberTv"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/imageIv" />

</RelativeLayout>