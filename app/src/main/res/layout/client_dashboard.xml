<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_marginTop="60dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/appName"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@+id/appName"
        android:textAlignment="center"
        android:hint="@string/hi_client"
        android:textSize="18dp"
        android:id="@+id/hiClient"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/handyMAnTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hiClient"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/handyman_icon"
        android:gravity="center_vertical"
        android:hint="Find a spetz"
        android:padding="12dp" />


    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handyMAnTV"
        android:layout_centerHorizontal="true"
        android:text="@string/searchView" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/search_button"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="Massege TV"
        android:textSize="30sp" />

    <Button
        android:id="@+id/spetsRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inquiries"
        android:layout_centerHorizontal="true"
        android:text="Spetz Requests" />

    <Button
        android:id="@+id/inquiries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/inquiriesButton" />

