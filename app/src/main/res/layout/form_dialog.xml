<?xml version="1.0" encoding="utf-8"?>
<!-- Linear layout as parent layout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Text view to show the text Select course-->
    <TextView
        android:id="@+id/problom_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="desc"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@id/problom_desc"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="problom_address"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/problom_address" />

    <TextView
        android:layout_below="@id/problom_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spetz name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/problem_spetzName" />

    <TextView
        android:layout_below="@id/problem_spetzName"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spetz phone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/problem_spetzPhone" />

    <TextView
        android:layout_below="@id/problem_spetzPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spetz name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/problem_userName" />

    <TextView
        android:layout_below="@id/problem_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spetz phone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/problem_userPhone" />


    <ImageView
        android:layout_below="@id/problem_userPhone"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Select occupation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/imageIv" />

</RelativeLayout>